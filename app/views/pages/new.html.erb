
<h1>Welcome to the longest word game !</h1>
<h2>Here is your grid :</h2>
<% @letters_shuffled.split('').each do |letter| %>
  <div style="text-transform: uppercase; color: red"><%= letter %></div>
<% end %>

<h3>What is your longest word ?</h3>
<form action="/score" method="post">
  <input type="text" name="word" value="<%= params[:word] %>" placeholder="Type a word">
  <input id="letters" name="letters" type="hidden" value="<%= @letters_shuffled %>" />
  <input type="submit">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  capitalizeAllWords
  
</form>
